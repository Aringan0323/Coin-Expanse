<div id="macd-draggable-resizable" class="card text-center shadow indicator-card">
   <div id="macd-card-title" class="card-header macd text-white op-card-header"> 
      <div style="flex:1"></div>
      <div class="op-card-title">
        <%= "macd".upcase %>
      </div> 
      <div class="remove">
        <button id="remove-link" class="remove-link" onclick="remove(event)">
         <i class="far fa-window-close" style="color:white"></i>
        </button>
      </div>
    </div>
  <div class="indicator-body">
    <select id="coin" class="mdb-select md-form" onchange="change(event)">
      <option value="1" disabled selected>Coin</option>
      <% Coin.all.order(:name).each_with_index do |coin, index| %>
        <option value="<%= index + 2 %>"><%= coin.name %></option>
      <% end %>
    </select>
    <div class="input-row">
      <div class="form-outline">
        <input type="number" id="valueMACD" class="form-control" oninput="changeInput(event)"/>
        <label class="form-label" for="typeNumber" style="font-size:5">Value </label>
      </div>
      <div class="form-outline">
        <input type="number" id="valueMACDError" class="form-control" oninput="changeInput(event)"/>
        <label class="form-label" for="typeNumber">Error </label>
      </div>
    </div>
    <div class="input-row">
      <div class="form-outline">
        <input type="number" id="valueMACDsignal" class="form-control" oninput="changeInput(event)"/>
        <label class="form-label" for="typeNumber" style="font-size:5">Signal </label>
      </div>
      <div class="form-outline">
        <input type="number" id="valueMACDsignalError" class="form-control" oninput="changeInput(event)"/>
        <label class="form-label" for="typeNumber">Error </label>
      </div>
    </div>
    <div class="input-row">
      <div class="form-outline">
        <input type="number" id="valueMACDhist" class="form-control" oninput="changeInput(event)"/>
        <label class="form-label" for="typeNumber" style="font-size:5">Hist </label>
      </div>
      <div class="form-outline">
        <input type="number" id="valueMACDhistError" class="form-control" oninput="changeInput(event)"/>
        <label class="form-label" for="typeNumber">Error </label>
      </div>
    </div>
    <select id="interval" class="mdb-select md-form" onchange="change(event)">
      <option value="1" disabled selected>Interval</option>
      <% %w(1m 5m 15m 30m 1h 2h 4h 12h 1d 1w).each_with_index do |interval, index| %>
        <option value="<%= index + 2 %>"><%= interval %></option>
      <% end %>
    </select>
  </div>
</div>