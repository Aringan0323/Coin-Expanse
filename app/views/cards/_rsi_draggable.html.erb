<div id="rsi-draggable-resizable-<%= Time.now.to_i %>" class="card text-center shadow indicator-card">
   <div id="rsi-card-title-<%= Time.now.to_i %>" class="card-header rsi text-white op-card-header"> 
      <div style="flex:1"></div>
      <div class="op-card-title">
        <%= "rsi".upcase %>
      </div> 
      <div class="remove">
        <button id="remove-link-<%= Time.now.to_i %>" class="remove-link" onclick="remove(event)">
         <i class="far fa-window-close" style="color:white"></i>
        </button>
      </div>
    </div>
  <div class="indicator-body">
    <%= collection_select :coin, :coin_id, Coin.all.order(:name), :id, :name, :include_blank => true , class: "browser-default custom-select"%>
    <div class="form-outline">
      <input type="number" id="value" class="form-control" />
      <label class="form-label" for="typeNumber">Value (USD)</label>
    </div>
    <select id="condition" class="mdb-select md-form">
      <option value="" disabled selected>Condition</option>
      <option value="1"><</option>
      <option value="2">></option>
      <option value="3">=</option>
      <option value="4">≤</option>
      <option value="5">≥</option>
    </select>
    <select id="interval" class="mdb-select md-form">
      <option value="" disabled selected>Interval</option>
      <% %w(1m 5m 15m 30m 1h 2h 4h 12h 1d 1w).each do |interval| %>
        <option value="1"><%= interval %></option>
      <% end %>
    </select>
  </div>
</div>