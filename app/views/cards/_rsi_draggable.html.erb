<div id="rsi-draggable-resizable-<%= Time.now.to_i %>" class="card text-center shadow indicator-card">
   <div id="rsi-card-title-<%= Time.now.to_i %>" class="card-header rsi text-white op-card-header"> 
      <div style="flex:1"></div>
      <div class="op-card-title">
        <%= "rsi".upcase %>
      </div> 
      <div class="remove">
        <button id="remove-link-<%= Time.now.to_i %>" class="remove-link" onclick="remove(event)">
         <i class="far fa-window-close" style="color:white"></i>
        </button>
      </div>
    </div>
  <div class="indicator-body">
    <select id="coin" class="mdb-select md-form" onchange="change(event)">
      <option value="1" disabled selected>Coin</option>
      <% Coin.all.order(:name).each_with_index do |coin, index| %>
        <option value="<%= index + 2 %>"><%= coin.name %></option>
      <% end %>
    </select>
    <div class="form-outline">
      <input type="number" id="value" class="form-control" oninput="changeInput(event)"/>
      <label class="form-label" for="typeNumber">Value </label>
    </div>
    <select id="condition" class="mdb-select md-form" onchange="change(event)">
      <option value="1" disabled selected>Condition</option>
      <option value="2"><</option>
      <option value="3">></option>
      <option value="4">=</option>
      <option value="5">≤</option>
      <option value="6">≥</option>
    </select>
    <select id="interval" class="mdb-select md-form" onchange="change(event)">
      <option value="1" disabled selected>Interval</option>
      <% %w(1h 1d 1w).each_with_index do |interval, index| %>
        <option value="<%= index + 2 %>"><%= interval %></option>
      <% end %>
    </select>
  </div>
</div>