<div id="stoch-draggable-resizable" class="card text-center shadow indicator-card">
   <div id="stoch-card-title" class="card-header stoch text-white op-card-header"> 
      <div style="flex:1"></div>
      <div class="op-card-title">
        <%= "stoch".upcase %>
      </div> 
      <div class="remove">
        <button id="remove-link" class="remove-link" onclick="remove(event)">
         <i class="far fa-window-close" style="color:white"></i>
        </button>
      </div>
    </div>
  <div class="indicator-body">
    <select id="coin" class="mdb-select md-form" onchange="change(event)">
      <option value="1" disabled selected>Coin</option>
      <% Coin.all.order(:name).each_with_index do |coin, index| %>
        <option value="<%= index + 2 %>"><%= coin.name %></option>
      <% end %>
    </select>
    <div class="input-row">
      <div class="form-outline">
        <input type="number" id="valueK" class="form-control" oninput="changeInput(event)"/>
        <label class="form-label" for="typeNumber" style="font-size:5">Lower </label>
      </div>
      <select class="mdb-select md-form" onchange="change(event)">
        <option value="" disabled selected>Condition</option>
        <option value="1"><</option>
        <option value="2">></option>
        <option value="3">=</option>
        <option value="4">≤</option>
        <option value="5">≥</option>
      </select>
    </div>
    <div class="input-row">
      <div class="form-outline">
        <input type="number" id="valueD" class="form-control" oninput="changeInput(event)"/>
        <label class="form-label" for="typeNumber" style="font-size:5">Upper </label>
      </div>
      <select class="mdb-select md-form" onchange="change(event)">
        <option value="" disabled selected>Condition</option>
        <option value="1"><</option>
        <option value="2">></option>
        <option value="3">=</option>
        <option value="4">≤</option>
        <option value="5">≥</option>
      </select>
    </div>
    <select id="interval" class="mdb-select md-form" onchange="change(event)">
      <option value="1" disabled selected>Interval</option>
      <% %w(1h 1d 1w).each_with_index do |interval, index| %>
        <option value="<%= index + 2 %>"><%= interval %></option>
      <% end %>
    </select>
  </div>
</div>