<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <%= form_for :user, scope: :post, url: '/register', class: "mx-1 mx-md-4" do |form| %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-file-person me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :username, class: "form-control", placeholder: "Username", required: true %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-mailbox me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :email, class: "form-control", placeholder: "Email", required: true %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-file-earmark-lock me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :password, class: "form-control", placeholder: "Password", required: true%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-key me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Repeat Password", required: true%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-key me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :encryptedBinanceApiKey, class: "form-control", placeholder: "Binance Key (optional)" %>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= form.submit "Register", class: "btn btn-primary btn-lg" %>
                  </div>

                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://images.hdqwalls.com/download/ethereum-x-dragon-ball-5k-ia-1920x1080.jpg" class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>