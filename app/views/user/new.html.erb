<section class="vh-100 gradient-custom" style="background-color: grey;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
          
          <% if flash[:danger] %>
            <div class="alert alert-danger"><%= flash[:danger] %></div>
          <% end %>

            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <%= form_for :user, scope: :post, url: '/register', class: "mx-1 mx-md-4" do |form| %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-file-person me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :username, class: "form-control", required: true %>
                      <label class="form-label" for="username">Username</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                   <i class="bi bi-pen-fill me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :full_name, class: "form-control", required: true %>
                      <label class="form-label" for="username">Full Name</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-google me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :email, class: "form-control", required: true, type: "email" %>
                      <label class="form-label" for="email">Email</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-file-lock-fill me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :password, class: "form-control", required: true%>
                      <label class="form-label" for="password">Password</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-shield-lock-fill me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :password_confirmation, class: "form-control",required: true%>
                      <label class="form-label" for="password_confirmation">Password Confirmation</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-key-fill me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :binance_public_key, class: "form-control" %>
                      <label class="form-label" for="username">Binance API Key (optional)</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-key-fill me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :encryptedBinanceApiKey, class: "form-control" %>
                      <label class="form-label" for="username">Secret Binance API Key (optional)</label>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= form.submit "Register", class: "btn btn-primary btn-lg" %>
                  </div>

                <% end %>

                <div style="display:flex;flex-direction:row;justify-content:center">
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Already have an account? <%= link_to "Log In", '/login'%></p>
                </div>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <%= image_tag "new_user.jpg", alt: "Sample image", class: "img-fluid" %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>