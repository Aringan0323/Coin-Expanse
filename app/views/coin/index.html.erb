<%= render 'shared/nav' %>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Coin Symbol</th>
      <th>Link To Coin Information</th>
      <th>Current Market Price</th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.name %></td>
        <td><%= link_to 'Show', coin %></td>
        <td><%= "price: $#{(coin.book_tickers[0].eql? nil) ? "unlisted" : coin.book_tickers[0].avgPrice}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>